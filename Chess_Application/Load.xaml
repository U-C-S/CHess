<Window x:Class="Chess_Application.Load"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_Application"
        mc:Ignorable="d"
        Title="Load" Height="300" Width="495" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Image Source="logo_chess.jpg" MouseLeftButtonDown="Draggable"/>
        <Label Content="CHess" Panel.ZIndex="1" Margin="0,35,0,0" Background="{x:Null}" Foreground="White" FontFamily="Ink Free" FontSize="40" VerticalAlignment="Top" FontWeight="Bold" Width="125" Height="60"/>
        <Label Content="H" Panel.ZIndex="1" Margin="-45,51,0,0" Background="{x:Null}" Foreground="White" FontFamily="Ink Free" FontSize="40" VerticalAlignment="Top" FontWeight="Bold" Width="36" Height="54">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.431"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <ProgressBar Height="15" Margin="0,275,0,0" VerticalAlignment="Top" Width="130"/>
        
    </Grid>
</Window>
